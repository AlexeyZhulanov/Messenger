<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Полупрозрачный светло-серый фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight" /> <!-- общий цвет -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Толстая рамка слева -->
    <item android:left="3.5dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/chatHighlightColor" /> <!-- цвет внутри -->
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>
