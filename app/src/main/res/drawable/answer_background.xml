<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Полупрозрачный светло-серый фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryDark" /> <!-- общий цвет -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Толстая рамка слева -->
    <item android:left="6dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorAccent" /> <!-- цвет внутри -->
            <stroke android:width="1.5dp" android:color="?attr/colorPrimary" /> <!-- Толстая рамка -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>
