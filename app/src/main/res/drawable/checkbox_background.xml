<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="?attr/colorAccent"/> <!-- Цвет фона для отмеченного состояния -->
            <size android:width="24dp" android:height="24dp"/> <!-- Размер круга -->
        </shape>
    </item>
    <!-- Unchecked state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Цвет фона для неотмеченного состояния -->
            <size android:width="24dp" android:height="24dp"/> <!-- Размер круга -->
            <stroke android:width="2dp" android:color="?attr/colorPrimary"/> <!-- Рамка для неотмеченного состояния -->
        </shape>
    </item>
</selector>
