<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="10dp">

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_toStartOf="@id/find_prev_action"
        android:layout_toLeftOf="@id/find_prev_action"
        android:gravity="center"
        android:hint="Search keyword"
        android:lines="1"
        android:textColor="#727072"
        android:textColorHint="#727072" />

    <ImageButton
        android:id="@+id/find_prev_action"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toStartOf="@id/find_next_action"
        android:layout_toLeftOf="@id/find_next_action"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Find previous Match"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_up" />

    <ImageButton
        android:id="@+id/find_next_action"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Find Next Match"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_down" />

    <EditText
        android:id="@+id/replacement_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/search_edit"
        android:layout_toStartOf="@id/replace_action"
        android:layout_toLeftOf="@id/replace_action"
        android:gravity="center"
        android:hint="Replacement"
        android:lines="1"
        android:textColor="#727072"
        android:textColorHint="#727072" />

    <ImageButton
        android:id="@+id/replace_action"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/search_edit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Replace all"
        android:padding="5dp"
        android:src="@drawable/ic_find_replace" />
</RelativeLayout>