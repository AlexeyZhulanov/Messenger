<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background_date"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic"
        tools:text="2 августа"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/receiverGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_trash_basic"
        style="@style/CustomCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_message"
        app:layout_constraintBottom_toBottomOf="@id/layout_message"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/layout_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toStartOf="@id/receiverGuideLine"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="start"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:background="@drawable/message_background_receiver"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:minWidth="170dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <ImageView
                    android:id="@+id/answerImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    tools:src="@drawable/wallpaper6"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/answerUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Алексей"
                    android:textColor="#000000"
                    android:fontFamily="casual"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="10dp"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/answerImageView"/>

                <TextView
                    android:id="@+id/answer_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Пример фывфы фывфывф вфывфывф"
                    android:maxEms="7"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:fontFamily="casual"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="-5dp"
                    app:layout_constraintTop_toBottomOf="@id/answerUsername"
                    app:layout_constraintStart_toEndOf="@id/answerImageView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/messageReceiverTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                tools:text="Сообщение"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/answer_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/editTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="italic"
                android:text="изменено"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/timeTextView"
                app:layout_constraintBottom_toBottomOf="@id/timeTextView"
                app:layout_constraintEnd_toStartOf="@id/timeTextView"
                app:layout_constraintStart_toEndOf="@id/messageReceiverTextView" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21:35"
                android:textSize="13sp"
                android:maxLines="1"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toStartOf="@id/ic_check"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/ic_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:paddingVertical="3dp"
                android:layout_marginStart="-10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/timeTextView"
                app:layout_constraintBottom_toBottomOf="@id/timeTextView"
                />

            <ImageView
                android:id="@+id/ic_check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_two"
                android:visibility="invisible"
                android:paddingVertical="3dp"
                android:layout_marginStart="-10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/timeTextView"
                app:layout_constraintBottom_toBottomOf="@id/timeTextView"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
