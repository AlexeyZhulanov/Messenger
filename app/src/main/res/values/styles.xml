<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_background</item>
    </style>
    <style name="CustomSelectNumberStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:background">#FF0000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Радиус скругления -->
    </style>
    <style name="TopRoundedCardShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
